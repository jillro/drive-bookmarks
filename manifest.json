{

  "manifest_version": 2,
  "name": "Drive Bookmarks",
  "version": "1.0",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "drive-bookmarks@maudroyer.fr",
      "strict_min_version": "86.0"
    }
  },
  "background": {
    "scripts": [
      "src/authorize.js",
      "src/sync.js",
      "src/database.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/48.png",
    "default_title": "Borderify"
  },
  "permissions": [
    "identity",
    "storage",
    "bookmarks",
    "contextMenus"
  ]
}
